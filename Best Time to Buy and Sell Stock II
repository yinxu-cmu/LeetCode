public int maxProfit(int[] prices) {
    int profit = 0;
    int buy = 0;
    int sell = 0;
    for (int i = 0; i < prices.length; i++) {
        /* this is important */
        if (prices[buy] > prices[i]) {
            buy = i;
            continue;
        }
        sell = i;
        if (prices[buy] < prices[sell]) {
            profit += prices[sell] - prices[buy];
            buy = i;
        }
    }
    return profit;
}
